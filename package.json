{
    "name": "nextjs-boilerplate",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "build:analyze": "ANALYZE=true yarn build",
        "start": "next start",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.json",
        "test": "NODE_ENV=test TZ=utc jest",
        "test:quick": "yarn test --no-coverage",
        "test:watch": "yarn test --watch",
        "test:watch:quick": "yarn test:watch --no-coverage",
        "test:report": "open coverage/lcov-report/index.html",
        "typecheck": "tsc",
        "verify": "run-p --print-label lint typecheck test build",
        "prepare": "husky install"
    },
    "dependencies": {
        "@next/bundle-analyzer": "^12.0.4",
        "next": "^12.0.4",
        "next-compose-plugins": "^2.2.1",
        "npm-run-all": "^4.1.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@testing-library/dom": "^8.10.1",
        "@testing-library/jest-dom": "^5.15.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.11",
        "@types/react": "^17.0.33",
        "@types/testing-library__jest-dom": "^5.14.1",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "eslint": "^7.32.0",
        "eslint-config-next": "^12.0.4",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jest": "^25.2.2",
        "eslint-plugin-jest-dom": "^3.9.2",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-testing-library": "^5.0.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^12.1.2",
        "open": "^8.4.0",
        "prettier": "^2.5.0",
        "prettier-eslint-cli": "^5.0.1",
        "typescript": "^4.5.2"
    },
    "engines": {
        "node": ">=14.15",
        "yarn": ">=1.22"
    }
}
