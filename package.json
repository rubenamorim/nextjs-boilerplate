{
    "name": "nextjs-boilerplate",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "build:analyze": "ANALYZE=true yarn build",
        "start": "next start",
        "lint": "next lint",
        "test": "NODE_ENV=test TZ=utc jest",
        "test:quick": "yarn test --no-coverage",
        "test:watch": "yarn test --watch",
        "test:watch:quick": "yarn test:watch --no-coverage",
        "test:report": "open coverage/lcov-report/index.html",
        "typecheck": "tsc",
        "verify": "run-p --print-label lint typecheck test build",
        "prepare": "husky install"
    },
    "dependencies": {
        "@next/bundle-analyzer": "^12.2.0",
        "next": "^12.1.6",
        "next-compose-plugins": "^2.2.1",
        "npm-run-all": "^4.1.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@testing-library/dom": "^8.14.0",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.3.0",
        "@testing-library/react-hooks": "^7.0.2",
        "@testing-library/user-event": "^14.2.1",
        "@types/jest": "^28.1.4",
        "@types/node": "16",
        "@types/react": "^18.0.14",
        "@types/testing-library__jest-dom": "^5.14.3",
        "@typescript-eslint/eslint-plugin": "^5.30.4",
        "@typescript-eslint/parser": "^5.27.0",
        "eslint": "^8.19.0",
        "eslint-config-next": "^12.2.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-jest": "^26.4.6",
        "eslint-plugin-jest-dom": "^4.0.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-testing-library": "^5.5.1",
        "husky": "^8.0.1",
        "jest": "^28.1.2",
        "jest-environment-jsdom": "^28.1.2",
        "lint-staged": "^13.0.0",
        "open": "^8.4.0",
        "prettier": "^2.6.2",
        "typescript": "^4.7.4"
    },
    "engines": {
        "node": ">=14.15",
        "yarn": ">=1.22"
    }
}
